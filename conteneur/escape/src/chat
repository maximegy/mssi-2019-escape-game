source $ESCAPE_UTIL

function main()
{
	init
}

function init()
{
	e_header "CHAT / AIDE"
	echo $(e_warning2 "") "Tapez ${bold}'?'${reset} puis 'ENTRER' puis posez votre question" 
	echo
	echo $(tty) > /tmp/TTY_JOUEURS
	bash
}



main
